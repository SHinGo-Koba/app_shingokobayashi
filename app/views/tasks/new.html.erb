<div class="container-fluid">
  <div class="row">
    <div class="col-lg-4">

      <%= render "shared/error_explanation", obj: @task %>

      <h1>Join <%= @project.title %></h1>

      <%= form_with(model: @task, url: project_tasks_path(params[:project_id]), local: true) do |f| %>
        <div class="form-group">
          <%= f.label "Task" %>
          <%= f.text_area :body, class: "form-control", placeholder: "Write what you are doing", rows: "4" %>
        </div>
        <div class="form-group">
          <%= f.submit "Commit", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

    </div>
  </div>
</div>