<% if logged_in? %>
  <%= link_to "Projects", projects_path, class: "nav-item nav-link" %>
  <%= link_to "Your works", user_path(@current_user), class: "nav-item nav-link" %>
  <%= link_to "Setting", edit_user_path(@current_user), class: "nav-item nav-link" %>
  <%= link_to "Logout", logout_path, method: :delete, class: "nav-item nav-link" %>
  <%= form_with url: search_path, class: "form-inline my-2 my-lg-0 ml-lg-1" do |f| %>
    <%= f.text_field :user_name, class: "form-control form-control-sm mr-sm-2", placeholder: "Search user", autocomplete: :off %>
    <%= f.submit "Search", name: nil, class: "btn btn-info btn-sm my-2 my-sm-0" %>
  <% end %>
<% else %>
  <%= link_to "Login", login_path, class: "nav-item nav-link" %>
  <%= link_to "Signup", signup_path, class: "nav-item nav-link" %>
<% end %>