<div class="container-fluid">
  <div class="row">
    <div class="col-lg-4">

      <%= render "shared/error_explanation", obj: @project %>

      <%= form_with(model: @project, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control", placeholder: "Title", autocomplete: :off %>
        </div>
        <div class="form-group">
          <%= f.label :summary %>
          <%= f.text_area :summary, class: "form-control", placeholder: "Summary about this project", rows: "4" %>
        </div>
        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

    </div>
  </div>
</div>